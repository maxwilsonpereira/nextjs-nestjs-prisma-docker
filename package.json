{
  "name": "pepsi-machine",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:debug": "turbo run dev:debug --parallel",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "postinstall": "yarn workspace database prisma db push",
    "clean": "yarn workspace database prisma migrate reset && git clean -fdx"
  },
  "devDependencies": {
    "eslint-config-custom": "*",
    "prettier": "^2.8.6",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@1.22.19"
}
