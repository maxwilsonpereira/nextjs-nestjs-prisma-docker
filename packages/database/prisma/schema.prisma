// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id              String @id @default(uuid())
  amountAvailable Int
  cost            Int
  productName     String
  seller          User   @relation(fields: [sellerId], references: [id])
  sellerId        String
}

model User {
  id       String     @id @default(uuid())
  username String     @unique
  password String
  deposit  Int
  role     Role
  Product  Product[]
  Sessions Sessions[]
}

enum Role {
  BUYER
  SELLER
}

model Sessions {
  id        String @id @default(uuid())
  user      User   @relation(fields: [userId], references: [id])
  userId    String
  sessionId String
}
